<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="4dp">

    <!-- Main display frame â€” initial src prevents "can't load" before first frame push -->
    <ImageView
        android:id="@+id/widget_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_digimon_preview" />

    <!-- Generic click zones for A / B / C (left / center / right thirds). -->
    <LinearLayout
        android:id="@+id/zone_columns"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_a"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@android:color/transparent"
            android:contentDescription="A button" />

        <ImageButton
            android:id="@+id/btn_b"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@android:color/transparent"
            android:contentDescription="B button" />

        <ImageButton
            android:id="@+id/btn_c"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@android:color/transparent"
            android:contentDescription="C button" />

    </LinearLayout>

    <!-- Digivice-specific button hit zones (right-side vertical stack). -->
    <LinearLayout
        android:id="@+id/zone_digivice_buttons"
        android:layout_width="88dp"
        android:layout_height="220dp"
        android:layout_gravity="end|center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btn_dv_a"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@android:color/transparent"
            android:contentDescription="Digivice A button" />

        <ImageButton
            android:id="@+id/btn_dv_b"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@android:color/transparent"
            android:contentDescription="Digivice B button" />

        <ImageButton
            android:id="@+id/btn_dv_c"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@android:color/transparent"
            android:contentDescription="Digivice C button" />

    </LinearLayout>

</FrameLayout>
